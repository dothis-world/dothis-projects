{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "request-web#build": {
      "dependsOn": ["^request-web#db-generate", "^build"],
      "outputs": [".next/**"]
    },
    "request-web#dev": {
      "dependsOn": ["^theme-gen", "^request-web#db-generate"],
      "cache": false
    },

    "theme-gen": {
      "inputs": ["./src/styles/**/*"],
      "outputs": ["./src/types/theme.d.ts"],
      "cache": false
    },
    "request-web#db-generate": {
      "inputs": ["./prisma/schema.prisma"],
      "cache": false
    },
    "request-web#db-push": {
      "inputs": ["./prisma/schema.prisma"],
      "cache": false
    },
    "studio": {
      "inputs": ["./prisma/schema.prisma"]
    },
    "analyze": {
      "inputs": [".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev-mock": {
      "cache": false
    },
    "@dothis/theme#build": {
      "outputs": ["./dist/**/*"],
      "inputs": ["./dashboard/**/*", "./utils/**/*"],
      "cache": true
    },
    "storybook": {
      "cache": false,
      "persistent": true
    },
    "@dothis/ui#storybook": {
      "dependsOn": ["@dothis/theme#build"]
    },
    "build-storybook": {
      "inputs": [".storybook/**/*", "src/components/**/*.stories.tsx"],
      "outputs": ["storybook-static/**"]
    },
    "@dothis/ui#build-storybook": {
      "dependsOn": ["@dothis/theme#build"]
    },
    "request-web": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    },
    "start:dev-api": {
      "cache": false,
      "outputs": ["dist/**/*"]
    },
    "start:dev-scheduler": {
      "cache": false,
      "outputs": ["dist/**/*"]
    }
  },
  "globalEnv": [
    "DATABASE_URL",
    "NEXTAUTH_URL",
    "NEXTAUTH_SECRET",
    "AWS_ACCESS_KEY_ID",
    "AWS_SECRET_ACCESS_KEY",
    "NODE_ENV"
  ],
  "globalDependencies": [".env", ".env.local", "tsconfig.json"]
}
