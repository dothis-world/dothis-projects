{
  "extends": "../../config/tsconfig/tsconfig-nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "preserveSymlinks": true,
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "allowJs": true
  },
  "include": [
    "./src/**/*",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "public/aseets/svg/index.ts"
  ],
  "exclude": ["node_modules", "./public/**/*"]
}
