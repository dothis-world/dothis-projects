{
  "extends": "@dothis/config/tsconfig-nextjs.json",
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "~/*": [
        "./*"
      ]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "references": [
    {
      "path": "../../packages/share",
      "declarationMap": true
    }
  ],
  "include": [
    "./src/**/*",
    "next-env.d.ts",
    "../../types/**/*.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./public/**/*"
  ]
}
