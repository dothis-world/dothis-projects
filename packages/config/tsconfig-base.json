{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "preserveSymlinks": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": [
      "../../node_modules/@types",
      "../../node_modules/@chakra-ui/styled-system/dist",
    ],
  },
  "include": ["eslint-dothis-nestjs.js", "eslint-dothis-nextjs.js"]
}
