{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "baseUrl": ".",
    "composite": false,
    "declaration": true,
    "preserveSymlinks": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,

    "paths": {
      "@dothis/share/*": ["../../packages/share/*"],
      "@dothis/config/*": ["../../packages/config/*"]
    },
    "typeRoots": [
      "../../node_modules/@types",
      "../../node_modules/@chakra-ui/styled-system/dist"
    ]
  },
  "include": ["eslint-dothis-nestjs.js", "eslint-dothis-nextjs.js"]
}
