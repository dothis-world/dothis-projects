{
  "extends": "@dothis/config/tsconfig-nextjs.json",
  "baseUrl": ".",
  "compilerOptions": {
    "outDir": "dist",
    "composite": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "references": [
    {
      "path": "../../types",
      "declarationMap": true,
    }
  ], 
  "include": [
  ".",
  "next-env.d.ts",
  "../../types/**/*.d.ts"
],
  "exclude": [
    "dist",
    "node_modules",
  ]
}
